{
  "name": "@hidoo/eslint-config",
  "version": "2.0.0",
  "description": "Shareable config for ESlint.",
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": "10.11.0"
  },
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./+babel": "./+babel.js",
    "./+compatibility": "./+compatibility.js",
    "./+mocha": "./+mocha.js",
    "./+node": "./+node.js",
    "./+prettier": "./+prettier.js",
    "./+stylistic": "./+stylistic.js",
    "./lib/*": "./lib/*.js"
  },
  "files": [
    "lib/",
    "+babel.js",
    "+compatibility.js",
    "+mocha.js",
    "+node.js",
    "+prettier.js",
    "+stylistic.js",
    "index.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write .",
    "preinstall": "npx only-allow pnpm",
    "prepare": "git config --local core.hooksPath .githooks",
    "test": "pnpm run --sequential '/^test:[^:]+$/'",
    "test:lint": "pnpm run --sequential '/^test:lint:[^:]+$/'",
    "test:lint:js": "eslint '**/*.js'",
    "test:unit": "cross-env NODE_ENV=test mocha test/**/*.test.js",
    "version": "pnpm run --sequential '/^(test|version:[^:]+)$/'",
    "version:changelog": "conventional-changelog -p angular -i ./CHANGELOG.md -s -r 0",
    "version:commit": "git add ./CHANGELOG.md"
  },
  "keywords": [
    "eslint-config"
  ],
  "dependencies": {
    "@babel/eslint-parser": "7.27.1",
    "@eslint/js": "9.27.0",
    "@stylistic/eslint-plugin": "4.4.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-compat": "6.0.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsdoc": "50.6.17",
    "eslint-plugin-mocha": "10.5.0",
    "eslint-plugin-n": "17.19.0",
    "eslint-plugin-sort-class-members": "1.21.0",
    "globals": "16.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.27.1",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "conventional-changelog-cli": "5.0.0",
    "cross-env": "7.0.3",
    "eslint": "9.27.0",
    "eslint-find-rules": "5.0.0",
    "lint-staged": "15.5.0",
    "mocha": "11.5.0",
    "pnpm": "10.11.0",
    "prettier": "3.5.3"
  },
  "peerDependencies": {
    "@babel/core": ">=7.2.0",
    "eslint": ">=9.0.0"
  },
  "author": "hidoo",
  "repository": {
    "type": "git",
    "url": "https://github.com/hidoo/eslint-config"
  },
  "license": "MIT"
}
