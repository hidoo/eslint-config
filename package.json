{
  "name": "@hidoo/eslint-config",
  "version": "0.1.3",
  "description": "Sharable eslint config for my projects.",
  "main": "index.js",
  "files": [
    "lib/base.js",
    "index.js",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "npm-run-all -s test:*",
    "test:validate": "node ./test/validate.js",
    "test:lint": "eslint -c index.js .",
    "find-new-rules": "npm-run-all -s find-new-rules:*",
    "find-new-rules:main": "eslint-find-rules --unused ./index.js",
    "prepare": "npm-run-all -s find-new-rules test"
  },
  "keywords": [
    "eslint-config"
  ],
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.0",
    "eslint-find-rules": "^3.3.1",
    "husky": "^1.0.0-rc.15",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.3"
  },
  "peerDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint"
    ]
  },
  "author": "hidoo",
  "repository": {
    "type": "git",
    "url": "https://github.com/hidoo/eslint-config"
  },
  "license": "MIT"
}
