{
  "name": "@hidoo/eslint-config",
  "version": "0.1.4",
  "description": "Sharable eslint config for my projects.",
  "main": "index.js",
  "files": [
    "lib/base.js",
    "index.js",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "npm-run-all -s test:*",
    "test:validate": "node ./test/validate.js",
    "test:lint": "eslint -c index.js .",
    "find-new-rules": "npm-run-all -s find-new-rules:*",
    "find-new-rules:main": "eslint-find-rules --unused ./index.js",
    "prepare": "npm-run-all -s find-new-rules test",
    "version": "npm-run-all -s version:changelog version:commit",
    "version:changelog": "conventional-changelog -p angular -i ./CHANGELOG.md -s -r 0",
    "version:commit": "git add ./CHANGELOG.md"
  },
  "keywords": [
    "eslint-config"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "babel-eslint": "^10.0.2",
    "conventional-changelog-cli": "^2.0.21",
    "eslint": "^5.16.0",
    "eslint-find-rules": "^3.3.1",
    "husky": "^3.0.5",
    "lint-staged": "^8.2.1",
    "npm-run-all": "^4.1.5"
  },
  "peerDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.14.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint"
    ]
  },
  "author": "hidoo",
  "repository": {
    "type": "git",
    "url": "https://github.com/hidoo/eslint-config"
  },
  "license": "MIT"
}
